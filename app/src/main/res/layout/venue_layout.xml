<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<androidx.cardview.widget.CardView
		android:id="@+id/card_view"
		android:layout_width="@dimen/_250sdp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/_10sdp"
		app:cardCornerRadius="@dimen/_7sdp">
		
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginTop="@dimen/_20sdp"
			android:layout_height="wrap_content">
			
			
			<ImageView
				android:id="@+id/ivBackgroundImage"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_175sdp"
				android:scaleType="centerCrop"
				android:src="@drawable/loading" />
			
			
			<RelativeLayout
				android:id="@+id/btn_login"
				android:layout_width="@dimen/_90sdp"
				android:layout_height="@dimen/_29sdp"
				android:layout_marginTop="@dimen/_30sdp"
				android:layout_alignParentEnd="true"
				android:background="@drawable/submit_btn_background"
				android:text="@string/app_name" >
				
				
				<TextView
					android:id="@+id/tv_btn_name"
					style="@style/text_header_bold_20sp"
					android:layout_width="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/_10sdp"
					android:layout_height="wrap_content"
					android:text="@string/app_name" />
			
			</RelativeLayout>
			
			
			
			
			
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/ivBackgroundImage"
				android:layout_marginTop="@dimen/_20sdp"
				android:layout_marginStart="@dimen/_10sdp"
				android:layout_marginEnd="@dimen/_10sdp">
				
				<TextView
					android:id="@+id/tv_retailer_name"
					style="@style/text_header_bold_20sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/app_name" />
				
				
				<TextView
					android:id="@+id/tv_place"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/tv_retailer_name"
					android:paddingRight="@dimen/_5sdp"
					android:layout_marginBottom="@dimen/_20sdp"
					android:text="@string/event_page_name" />
				
			</RelativeLayout>
		
		</RelativeLayout>
	</androidx.cardview.widget.CardView>
</RelativeLayout>